<html>
    <head>
        <title> <%= title %> </title>
        <!-- here /css,  becuse to look root of the folder we have give in index.js while
        defining static files  -->
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <!-- Now any link tag if there is in body of layout.ejs, it would put it in head section , and
        any script, it would put at place of <%- script %> -->
        <%- style %>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" integrity="sha512-0p3K0H3S6Q4bEWZ/WmC94Tgit2ular2/n0ESdfEX8l172YyQj8re1Wu9s/HT9T/T2osUw5Gx/6pAZNk3UKbESw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    </head>

    <body>

        <%- include("_header"); %>
        <!-- locals has a flash and flash.success does not have zero length
        <% if (flash.success && flash.success.length > 0){ %>
            <h5>
                <%= flash.success %>
            </h5>

        <%}%> -->

        <!-- <h1>Codeial / <%= title %></h1> -->
        <!-- this body is just a syntax like "include", the data rendered from home_controller.ejs
        would get displayed here -->

        <main id = 'layout-main'>
            <%- body %>
        </main>
        


        <%- include("_footer"); %>

        <%- script %>

        <script>
            // Go to noty.js website, see documentation to understand
            <% if(flash.success && flash.success.length > 0){ %>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                }).show()
            <%}%>

            <% if(flash.error && flash.error.length > 0){ %>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show()
            <%}%>
        </script>
    </body>
</html>